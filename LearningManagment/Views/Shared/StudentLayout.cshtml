<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/all.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />

    <style>
        :root {
            --color1: #1cb69a; /*Green color*/
            --color2: #ee4a62; /*Red/pink color*/
            --color3: #1f2432; /*Greay color*/
        }
        
        .bg-mycolor1 {
            background-color: var(--color1) !important;
        }

        .bg-mycolor2 {
            background-color: var(--color2) !important;
        }

        .bg-mycolor3 {
            background-color: var(--color3) !important;
        }

        .txt-mycolor1 {
            color: var(--color1) !important;
        }

        .txt-mycolor2 {
            color: var(--color2) !important;
        }

        .txt-mycolor3 {
            color: var(--color3) !important;
        }

        .ic {
            border: 1px solid white;
            margin-right: 20px;
            width: 20px;
            line-height: 20px;
        }

            .ic:hover {
                border: 1px solid var(--color1);
                color: var(--color1);
                transition: all .6s;
                transform: rotate(360deg);
            }
        .t1 {
            font-size: 14px;
        }

            .t1 a {
                text-decoration: none;
                color: white;
            }

        #menu {
            background-color: transparent !important;
        }

        .bfoottxt {
            font-size: 14px;
            color: white;
            text-decoration: none;
        }

            .bfoottxt:hover {
                color: var(--color1);
                font-size: 16px;
                transition: all .6s;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row t1 bg-mycolor3 text-light text-center py-3">
            <div class="col-sm-4">
                <a href="#">Contact & Support</a> |
                <a href="#" class="txt-mycolor2">Sign In</a> |
                <a href="#" class="txt-mycolor2">Change Password</a> |
            </div>
            <div class="col-sm-4">
                Welcome to my Learning Management Softweare
            </div>
            <div class="col-sm-4">
                <i class="fa-brands fa-facebook ic"></i>
                <i class="fa-brands fa-twitter ic"></i>
                <i class="fa-brands fa-youtube ic"></i>
                <i class="fa-brands fa-square-instagram ic"></i>
                <i class="fa-brands fa-linkedin ic"></i>
            </div>
        </div>
        <div class="row t2 py-3 shadow bg-body-tertiary rounded">
            <div class="col-sm-1"></div>
            <!--Start Header-->
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-3 fs-3">
                        EduMax <b class="txt-mycolor1">Learning <i class="fa-solid fa-graduation-cap"></i></b>
                    </div>
                    <div class="col-sm-7">
                        <!--Start Menu-->
                        <nav class="navbar navbar-expand-lg bg-body-tertiary" id="menu">
                            <div class="container-fluid">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarNav">
                                    <ul class="navbar-nav">
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="~/student/dashboard"><i class="fa-solid fa-dashboard"></i> Dashboard</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/student/course"><i class="fa-solid fa-play"></i> Video Lectures</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/student/notes"><i class="fa-solid fa-book-open"></i> Notes</a>
                                        </li>
                                        @*<li class="nav-item">
                                            <a class="nav-link" href="~/student/course"><i class="fa-solid fa-book-open"></i> Courses</a>
                                        </li>*@
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/student/task"><i class="fa-solid fa-tasks"></i> Task</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/student/softwarekit"><i class="fa-solid fa-microchip"></i> Software Kit</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                        <!--End Menu-->
                    </div>
                    
                    <div class="col-sm-2 my-auto">
                        @if (Session["Email"] == null) 
                        {
                            <script>
                                alert("Please Login First !");
                                window.location.href = "/home/index";
                            </script>
                         }
                         else
                         {
                            <img src="~/Content/stddatapic/@Session["Picture"]" height="45" width="45" />
                            <b>Welcome, @Session["Name"]</b>
                         }

                    </div>
                </div>
            </div>
            <!--End Header-->
            <div class="col-sm-1 pt-2">
                <a href="/student/logout"><b class="bg-mycolor2 py-2 px-3 rounded-1">Log Out</b></a>
            </div>
        </div>
    </div>
    <div class="row chidpage">
        <div class="col-sm-12">
            @RenderBody();
        </div>
    </div>
    <div class="row bfooter bg-mycolor3 py-2">
        <div class="col-sm-6 text-center">
            <a href="#" class="bfoottxt">Doveloped By: <b>Vishvajeet Sharma</b></a>
        </div>
        <div class="col-sm-6 text-center">
            <a href="https://techpile.in" class="bfoottxt" target="_blank">&copy; Techpile Technology Pvt.Ltd.</a>
        </div>
    </div>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
</body>
</html>
