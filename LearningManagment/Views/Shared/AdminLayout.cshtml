<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/all.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />

    <link href="//cdn.datatables.net/2.1.7/css/dataTables.dataTables.min.css" rel="stylesheet" />

    <style>
        :root {
            --color1: rgb(231, 134, 80);
            --color2: rgb(90, 125, 203);
            --color3: #1f2432;
        }

        body {
            overflow-x: hidden;
        }

        .bg-mycolor1 {
            background-color: var(--color1) !important;
        }

        .bg-mycolor2 {
            background-color: var(--color2) !important;
        }

        .bg-mycolor3 {
            background-color: var(--color3) !important;
        }

        .txt-mycolor1 {
            color: var(--color1) !important;
        }

        .txt-mycolor2 {
            color: var(--color2) !important;
        }

        .txt-mycolor3 {
            color: var(--color3) !important;
        }

        .ic {
            border: 1px solid white;
            margin-right: 20px;
            width: 20px;
            line-height: 20px;
        }

            .ic:hover {
                border: 1px solid var(--color1);
                color: var(--color1);
                transition: all .6s;
                transform: rotate(360deg);
            }

        .t1 {
            font-size: 14px;
        }

            .t1 a {
                text-decoration: none;
                color: white;
            }

        #menu {
            background-color: transparent !important;
        }

        .slider {
            min-height: 600px;
            background-image: url('../../content/images/image1.jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        .bfoottxt {
            font-size: 14px;
            color: white;
            text-decoration: none;
        }

            .bfoottxt:hover {
                color: var(--color1);
                font-size: 16px;
                transition: all .6s;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row t1 bg-mycolor3 text-light text-center py-3">
            <div class="col-sm-4">
                <a href="#">Contact & Support</a> |
                <a href="#" class="txt-mycolor2">Sign In</a> |
                <a href="#" class="txt-mycolor2">Change Password</a> |
            </div>
            <div class="col-sm-4">
                Welcome to my Learning Management Softweare
            </div>
            <div class="col-sm-4">
                <i class="fa-brands fa-facebook ic"></i>
                <i class="fa-brands fa-twitter ic"></i>
                <i class="fa-brands fa-youtube ic"></i>
                <i class="fa-brands fa-square-instagram ic"></i>
                <i class="fa-brands fa-linkedin ic"></i>
            </div>
        </div>
        <div class="row p-0 shadow bg-body-tertiary rounded">
            <!--Start Header-->
            <div class="col-sm-1"></div>
            <div class="col-sm-3 fs-2">
                EduMax <b class="txt-mycolor2">Learning <i class="fa-solid fa-graduation-cap"></i></b>
            </div>
            <div class="col-sm-4"></div>
            <div class="col-sm-2">
                <i class="fa-solid fa-phone txt-mycolor2"></i> <b> Call Us</b><br />+91-7007237006
            </div>
            @if (Session["admin"]==null)
            {
                <script>
                    alert('Please login');
                    location.href = '/home/adminlogin';
                </script>
            }
            <div class="col-sm-2">
                <a href="/admin/logout" class="btn my-1 bg-mycolor2 fs-5">Log Out</a>
            </div>
            <!--Start Menu Section-->
        </div>
        <div class="row t2 shadow bg-body-tertiary rounded">
            <div class="col-sm-12 mx-5 px-5">
                <nav class="navbar navbar-expand-lg bg-body-tertiary" id="menu">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/admin/dashboard"><i class="fa-solid fa-dashboard"></i> Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/addbatch"><i class="fa-solid fa-users"></i> Add Bacths</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/addvideocategory"><i class="fa-solid fa-book-open-reader"></i> Add Video Catagory</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/addvideo"><i class="fa-solid fa-video"></i> Add Video</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/addassignment"><i class="fa-solid fa-paper-plane"></i> Add Assignments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/manageassignment"><i class="fa-solid fa-bars-progress"></i> Manage Assignments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/notes"><i class="fa-solid fa-book"></i> Add Notes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/manageenquiry"><i class="fa-solid fa-bars-progress"></i> Manage Enquiry</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/managestudent"><i class="fa-solid fa-bars-staggered"></i> Manage Student</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!--End Menu Section-->

    </div>
    <!--End Header-->
    <div class="row childpage">
        <div class="col-sm-12">
            @RenderBody();
        </div>
    </div>
    <div class="row bfooter bg-mycolor3 py-2" style="margin-top: 90px;">
        <div class="col-sm-6 text-center">
            <a href="#" class="bfoottxt">Doveloped By: <b>Vishvajeet Sharma</b></a>
        </div>
        <div class="col-sm-6 text-center">
            <a href="https://techpile.in" class="bfoottxt" target="_blank">&copy; Techpile Technology Pvt.Ltd.</a>
        </div>
    </div>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="//cdn.datatables.net/2.1.7/js/dataTables.min.js"></script>


    <script>
        let table = new DataTable('#myTable');
    </script>
</body>
</html>
