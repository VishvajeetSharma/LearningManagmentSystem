
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

<style>
    .cardzoom{
        transition: all ease 1s
    }
    .cardzoom:hover{
        transform: scale(1.1);
        transition: 1.5s
    }
    a{
        text-decoration: none;
    }
</style>

<body>
    <div class="container">
        <div class="row mt-3">
            <div class="text-center fs-2 mb-4">Dashboard</div>
            <div class="col-sm-4">
                <div class="card  shadow-lg p-2 rounded-2" style="width: 18rem;">
                    <img src="~/Content/stddatapic/myimg.jpg" class="rounded-circle card-img-top img-fluid mx-auto" alt="user image" style="max-height:120px; max-width:120px;">
                    <div class="card-body ps-3">
                        <h5 class="card-title">Vishvajeet Sharma</h5>
                        <h5 class="card-title">v@gmail.com</h5>
                        <h5 class="card-title">123456789</h5>
                        <h5 class="card-title">Diploma CS/IT</h5>
                        <h5 class="card-title">ST2023</h5>
                        <a href="#" class="btn bg-mycolor2">Update Profile</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="row mt-4">
                    <div class="col-sm-3">
                        <a href="~/student/videolecture">
                            <div class="card cardzoom mx-auto p-3 text-center border-0 shadow-lg">
                                <i class="fa-solid fa-play fs-3"></i>
                                <h4>Video Lecture</h4>
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        <a href="~/student/notes">
                            <div class="card cardzoom mx-auto p-3 text-center border-0 shadow-lg">
                                <i class="fa-solid fa-book-open fs-3"></i>
                                <h4>Notes</h4>
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        <a href="~/student/course">
                            <div class="card cardzoom mx-auto p-3 text-center border-0 shadow-lg">
                                <i class="fa-solid fa-book-open fs-3"></i>
                                <h4>Courses</h4>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-sm-3">
                        <a href="~/student/task">
                            <div class="card cardzoom mx-auto p-3 text-center border-0 shadow-lg">
                                <i class="fa-solid fa-list-check fs-3"></i>
                                <h4>Task</h4>
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        <a href="~/student/softwarekit">
                            <div class="card cardzoom mx-auto p-3 text-center border-0 shadow-lg">
                                <i class="fa-solid fa-microchip fs-3"></i>
                                <h4>Software Kit</h4>
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        <a href="~/student/changepassword">
                            <div class="card cardzoom mx-auto p-3 text-center border-0 shadow-lg">
                                <i class="fa-solid fa-key fs-3"></i>
                                <h5>Change Password</h5>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

