
@{
    ViewBag.Title = "AddVideo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<head>
    <title>Add Video</title>
    <style>
        .form-control {
            border-radius: 0px !important;
            height: 50px;
            margin-bottom: 10px;
        }

        .btn {
            width: 70%;
            margin: 0% 15%;
        }
    </style>
</head>

<body>
    <div class="container-fluid p-0 m-0">
        <div class="row fs-3 pt-1 m-3 text-center"> <span>Add & Manage <b class="txt-mycolor1">Video</b></span></div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <form action="/admin/savevideo" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-6">
                            <lable for="video_title">Video Title:</lable>
                            <input type="text" name="txt_title" id="video_title" placeholder="Enter Video Title..." required class="form-control mb-3 shadow bg-body-tertiary border-0" />
                        </div>
                        <div class="col-sm-6">
                            <label for="batch">Batch:</label>
                            <select name="ddl_batch" id="video_category" required class="form-control mb-3 shadow bg-body-tertiary border-0">
                                <option value="">Select Batch</option>
                                @if(ViewBag.table1.Rows.Count > 0)
                                {
                                    foreach(var row in ViewBag.table1.Rows)
                                    {
                                        <option value="@row[0]">@row[1]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="video_category">Video Category:</label>
                            <select name="ddl_category" id="video_category" class="form-control mb-3 shadow bg-body-tertiary border-0" required>
                                <option value="">Select Category</option>
                                @if (ViewBag.table1.Rows.Count > 0)
                                {
                                    foreach (var row in ViewBag.table2.Rows)
                                    {
                                        <option value="@row[0]">@row[1]</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label for="video_link">Video Link:</label>
                            <input type="text" name="txt_link" id="video_link" placeholder="Enter Video Link" required class="form-control mb-3 shadow bg-body-tertiary border-0">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <label for="video_thumbNail">Video ThumbNail:</label>
                            <input type="file" name="file_thumbnail" id="video_thumbnail" accept="image/*" required class="form-control mb-3 shadow bg-body-tertiary border-0">
                        </div>
                    </div>
                    <div class="row">
                        <label for="video_description">Video Description:</label>
                        <textarea name="txt_desc" id="video_description" rows="4" placeholder="Enter Video Description.." required class="mb-3 shadow bg-body-tertiary border-0"></textarea>
                    </div>

                    <div class="row">
                        <input type="submit" class="form-control shadow bg-mycolor1 border-0 btn mt-2" value="Submit"/>
                    </div>
                </form>

            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="table-container">
                <div class="row text-center mt-4">
                    <span class="col-md-4 fs-4" style="margin-left: 450px;">Manage <b class="txt-mycolor1">Video</b></span>
                </div>
                <table class="table table-bordered table-hover" id="myTable">
                    <thead class="table-dark text-uppercase">
                        <tr>
                            <th>Sr</th>
                            <th>Video Titale</th>
                            <th>Batch</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Video Link</th>
                            <th>ThumbNail</th>
                            <th>Added On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.table3.Rows.Count > 0)
                        {
                            foreach (var row in ViewBag.table3.Rows)
                            {
                                <tr>
                                    <td>@row["Sr"]</td>
                                    <td>@row["Title"]</td>
                                    <td>@row[9]</td>
                                    <td>@row["CetegoryName"]</td>
                                    <td>@row["Description"]</td>
                                    <td>@row["Link"]</td>
                                    <td><img src="~/Content/videopic/@row["ThumbNail"]" height="40" width="60" /></td>
                                    <td>@row["Date"]</td>
                                    <td><button class="btn bg-mycolor1 px-1">DELETE</button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</body>
